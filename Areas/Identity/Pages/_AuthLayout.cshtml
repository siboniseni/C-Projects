@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-around">
    <div class="col-5 mt-5">
        <div class="card login-logout-card">
            <div class="card-header">
                <ul class="nav nav-tabs card-hearder-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Login">
                            log In
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Register">
                            Register
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="col-10 my-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await RenderSectionAsync("Scripts", required: false)
}
<script>
    $(function () {
        const currentPage = location.pathname;
        $('.nav-tabs li a').each(function () {
            const $this = $(this);
            if (currentPage.toLocaleLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
                $this.addClass('active');
            }
        })
    })
</script>